<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Shortie</servlet-name>
		<servlet-class>vc.Shortie</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Shortie</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Post</servlet-name>
		<servlet-class>vc.Post</servlet-class></servlet>
	<servlet-mapping>
		<servlet-name>Post</servlet-name>
		<url-pattern>/post</url-pattern></servlet-mapping>
	<servlet>
		<servlet-class>vc.UserMessages</servlet-class>
		<servlet-name>UserMessages</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserMessages</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>		
	<servlet>
		<servlet-class>vc.Subscribe</servlet-class>
		<servlet-name>Subscribe</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>Subscribe</servlet-name>
		<url-pattern>/subscribe/*</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-class>vc.Unsubscribe</servlet-class>
		<servlet-name>Unsubscribe</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>Unsubscribe</servlet-name>
		<url-pattern>/unsubscribe/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-class>vc.UserList</servlet-class>
		<servlet-name>UserList</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserList</servlet-name>
		<url-pattern>/users</url-pattern>
	</servlet-mapping>
		<servlet>
		<servlet-class>vc.MySubscription</servlet-class>
		<servlet-name>MySubscription</servlet-name>
	</servlet>
	<servlet-mapping>
		<servlet-name>MySubscription</servlet-name>
		<url-pattern>/subscriptions</url-pattern>
	</servlet-mapping>
</web-app>
